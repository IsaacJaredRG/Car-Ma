<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">EDITAR MATERIAS</h3>
                </div>
                <div class="card-body">
                    <form action="/edit/{{materia.Id}}" method="post">
                    <div class="input-group mt-2">
                        <label for="Nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="Nombre" id="Nombre" value="{{materia.Nombre}}" placeholder="Ejemplo: Calculo" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Numero_creditos" class="input-group-text">Numero de creditos</label>
                        <input class="form-control" type="number" name="Numero_creditos" id="Numero_creditos" value="{{materia.Numero_creditos}}"  required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Creditos_extra" class="input-group-text">Creditos si es extra</label>
                        <input class="form-control" type="number" name="Creditos_extra" id="Creditos_extra" value="{{materia.Creditos_extra}}"  required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Horario" class="input-group-text">Horario</label>
                        <input class="form-control" type="text" name="Horario" id="Horario" value="{{materia.Horario}}"  required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Nombre_docente" class="input-group-text">Nombre del docente</label>
                        <input class="form-control" type="text" name="Nombre_docente" id="Nombre_docente" value="{{materia.Nombre_docente}}"  required>
                    </div>                                    
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Actualizar</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>