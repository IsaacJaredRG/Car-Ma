<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card text-center">
                <div class="card-header">
                    <h3 class="text-uppercase">CREAR UNa NUEVA MATERIA</h3>
                </div>
                <div class="card-body">
                    <form action="/add" method="post">
                    <div class="input-group mt-2">
                        <label for="Nombre" class="input-group-text">Nombre</label>
                        <input class="form-control" type="text" name="Nombre" id="Nombre" placeholder="Calculo diferencial" autofocus required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Numero_creditos" class="input-group-text">Numero de creditos</label>
                        <input class="form-control" type="number" name="Numero_creditos" id="Numero_creditos" placeholder="5" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Creditos_extra" class="input-group-text">Creditos si vale extra</label>
                        <input class="form-control" type="number" name="Creditos_extra" id="Creditos_extra" placeholder="10" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Horario" class="input-group-text">Horario</label>
                        <input class="form-control" type="text" name="Horario" id="Horario" placeholder="7:00 - 8:00" required>
                    </div>
                    <div class="input-group mt-2">
                        <label for="Nombre_docente" class="input-group-text">Nombre del docente</label>
                        <input class="form-control" type="text" name="Nombre_docente" id="Nombre_docente" placeholder="Mario Hernesto de la Cruz" required>
                    </div>                                    
                    <div class="form-group mt-4 d-grid gap-2">
                        <button class="btn btn-success"> Crear</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>