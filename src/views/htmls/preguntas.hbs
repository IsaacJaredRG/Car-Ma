            <label for="carrera">Carrera:</label>
            <select name="carrera" id="carrera">
            </select>
            <br>
            <label for="Materias_Reprobadas">Materias Reprobadas:</label>
            <select id="Materias_Reprobadas" name="Materias_Reprobadas">
                <option value=1>No</option>
